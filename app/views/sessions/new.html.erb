<% provide(:title, "Log in") %>
 


 <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->

  

    

    <div class="background-image"></div>
<div class="content">
<div class="container">
      
        <div class="login-wrap form-login form-login-heading">
            <h2 class="form-login-heading">sign in now</h2>
                <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
<br>
      <%= f.submit "Log in", class: "btn btn-info btn btn-primary btn-lg" %>
    <% end %><p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
  
</div>




 